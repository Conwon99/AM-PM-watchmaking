---
import Layout from '../layouts/Layout.astro';
import { Navbar } from '../sections/Navbar';
import { Hero } from '../sections/Hero';
import { CoreValuesSection } from '../sections/CoreValuesSection';
import { ServicePageServices } from '../sections/ServicePageServices';
import { GallerySection } from '../sections/GallerySection';
import { ProcessSection } from '../sections/ProcessSection';
import { FAQSection } from '../sections/FAQSection';
import { QuoteSection } from '../sections/QuoteSection';
import { FooterSection } from '../sections/FooterSection';
---

<Layout>
  <div class="min-h-screen bg-neutral-100 font-figtree text-black text-sm leading-5 antialiased">
    <Navbar client:load />
    <main class="pt-0">
      <Hero client:load />
      <CoreValuesSection client:load />
      <ServicePageServices client:load />
      <GallerySection client:load />
      <ProcessSection client:load />
      <FAQSection client:load compact={true} />
      <QuoteSection client:load showTerms={false} />
      <FooterSection client:load />
    </main>
  </div>
</Layout>
